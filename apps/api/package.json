{
  "name": "@ai-recipes/api",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && pnpm sentry:sourcemaps",
    "start": "node dist/index.js",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org nikolovlazar --project ai-recipes-api ./dist && sentry-cli sourcemaps upload --org nikolovlazar --project ai-recipes-api ./dist"
  },
  "dependencies": {
    "@ai-recipes/shared": "file:../../packages/shared",
    "@ai-sdk/anthropic": "^2.0.32",
    "@libsql/client": "^0.15.15",
    "@openfoodfacts/openfoodfacts-nodejs": "2.0.0-alpha.19",
    "@sentry/cli": "^2.56.1",
    "@sentry/node": "^10.20.0",
    "@sentry/profiling-node": "^10.20.0",
    "ai": "^5.0.76",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.6",
    "express": "^5.1.0",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.17",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3"
  }
}